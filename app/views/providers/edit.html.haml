.provider
  %h3= @provider.name

  =form_for @provider, :html => {:style => 'padding-left: 0; background-color: transparent;'} do |f|
    = f.label :email, 'Email Address'
    = f.text_field :email

    = f.label :phone, 'Phone Number'
    = f.text_field :phone

    = f.label :specialties, 'Specialties'
    - if @provider.specialties
      %input{:type => 'text', :name => 'provider[specialties]', :value => @provider.list_specialties}

    = f.label :street_address, 'Address'
    = f.text_field :street_address

    = f.label :description, 'Provider Description'
    = f.text_area :description, {:size => '40x4', :placeholder => 'Tell your customers a bit about yourself!'}

    = f.submit 'Update Listing'
