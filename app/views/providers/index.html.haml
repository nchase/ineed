- @providers.each do |provider|
  .provider
    %h3
      = link_to provider.name, provider_path(provider)
    %ul
      %li
        email: 
        = provider.email
      %li
        phone number: 
        = provider.phone
      %li
        specialties: 
        = provider.list_specialties
      %li
        description: 
        = provider.description
